    <div class="row">
      <% data.cities.each do |city, info| %>
          <div class="col-xs-12 col-sm-4">
          <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.4), rgba(0,0,0,0.3)), url('https://kitt.lewagon.com/placeholder/cities/<%= info.city_slug.downcase  %>');">
            <div class="card-category">Popular</div>
            <div class="card-description">
              <h2><%= info.city_name %></h2>
              <% info.rating.times do  %>
                <i class="fas fa-star"></i>
              <% end %>
              <% (5-info.rating).times do %>
                <i class="far fa-star"></i>
              <% end %>
            </div>
            <img class="card-user" src="https://kitt.lewagon.com/placeholder/users/<%= info.github_username.downcase %>">
            <a class="card-link" href="#" ></a>
          </div>
        </div>
      <% end %>
  </div>
